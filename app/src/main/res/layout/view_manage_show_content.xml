<?xml version="1.0" encoding="utf-8"?>
<com.example.heavon.views.ManageShowContentView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_box"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_toLeftOf="@+id/show_content_box"
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/checked"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/show_content_box"
            android:orientation="horizontal"
            android:padding="@dimen/padding_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="140dp"
                    android:layout_height="86.5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/bt_favorite"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/favorite_white"
                    android:scaleType="fitXY"
                    android:layout_margin="8dp"
                    android:layout_alignRight="@+id/thumb"
                    android:layout_alignEnd="@+id/thumb" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <LinearLayout
                    android:id="@+id/name_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/investment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:background="@color/blueBackground"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="正在招商"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        style="@style/ShowName"
                        android:textSize="16sp"
                        android:text="欢乐颂"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_platform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_box"
                    android:layout_marginTop="8dp"
                    style="@style/Text"
                    android:textSize="12sp"
                    android:text="播放平台：搜狐视频、腾讯视频、爱奇艺、乐视"/>

                <TextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    style="@style/Text"
                    android:textSize="12sp"
                    android:text="东阳正午阳光影视有限公司"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_toRightOf="@+id/show_content_box"
            android:background="#FE3F35">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/trash_white"/>

        </RelativeLayout>
    </RelativeLayout>

</com.example.heavon.views.ManageShowContentView>
